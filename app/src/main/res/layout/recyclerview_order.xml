<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/dingdan"
                android:layout_width="18dp"
                android:layout_height="17dp" />

            <TextView
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:lines="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="13dp"
                android:textColor="@color/white_ffffff"
                android:textSize="15sp"
                android:text="123456789012"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/shebeimingcheng"
                android:layout_width="18dp"
                android:layout_height="17dp" />

            <TextView
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:lines="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="13dp"
                android:textColor="@color/white_ffffff"
                android:textSize="15sp"
                android:text="维修设备名称1、维修设备2、维修设…"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/address"
                android:layout_width="18dp"
                android:layout_height="17dp" />

            <TextView
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:lines="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="13dp"
                android:textColor="@color/white_ffffff"
                android:textSize="15sp"
                android:text="黑龙江省哈尔滨市南岗区汉广街19号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/phone"
                android:layout_width="18dp"
                android:layout_height="17dp" />

            <TextView
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:lines="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="13dp"
                android:textColor="#FF4D16"
                android:textSize="15sp"
                android:text="12345678901"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:background="#AEAEAE"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="15dp"
                android:background="#02C160"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@color/white_ffffff"
                android:text="维修中"
                android:layout_width="92dp"
                android:layout_height="30dp" />

        </LinearLayout>
        
        <View
            android:layout_marginTop="20dp"
            android:background="#33C4CDE1"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

    </LinearLayout>

</LinearLayout>
